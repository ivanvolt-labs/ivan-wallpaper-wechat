/* 头部 */
.headers-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 180rpx;
  background-color: #1d2021cc;
  z-index: 99;
  backdrop-filter: blur(5px);
  -webkit-transition: opacity 0.2s ease, -webkit-transform 0.2s ease;
  -moz-transition: opacity 0.2s ease, -moz-transform 0.2s ease;
  -o-transition: opacity 0.2s ease, -o-transform 0.2s ease;
  transition: opacity 0.2s ease, transform 0.2s ease;
  will-change: opacity, transform; 
}
.headers-top-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 240rpx;
  background-size: cover;
  background-position: initial;
  z-index: 98;
}
.headers-title{
  position: fixed;
  top: 100rpx;
  /* left: 50%;
  transform: translateX(-50%); */
  font-size: 36rpx;
  font-weight: bolder;
  z-index: 100;
  color: #FFFFFF;
  border-radius: 20rpx;
}
.headers-search{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  top: 95rpx;
  left: 20rpx;
  padding: 8rpx 20rpx;
  z-index: 100;
  background: rgb(7 189 21 / 90%);
  border-radius: 40rpx;
  width: 120rpx;
  height: 50rpx;
}
.headers-search-img{
  width: 38rpx;
  height: 38rpx;
}
.headers-search-text{
  color: #D0D0D0;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.headers-top-image, .headers-title, .headers-top, .headers-search {
  transition: opacity 0.3s ease, transform 0.3s ease; /* 添加 transform 属性 */
  will-change: opacity, transform; /* 提升性能 */
}
.headers-top-image {
  opacity: 1;
}
.headers-title, .headers-top, .headers-search {
  opacity: 0;
}
.show {
  opacity: 1;
  transform: translateY(0);
}
.hide {
  opacity: 0;
  transform: translateY(-100%);
}

/* 引导起泡框 */
.lead-box {
  position: fixed;
  top: 95px;
  right: 25px;
  z-index: 999;
  width: 500rpx;
  background: rgb(0 188 212 / 0.8);
  border-radius: 10rpx;
  padding: 12rpx 15rpx;
}
.r_box {
  font-size: 24rpx;
  font-weight: 400;
  color: #f1ebcc;
  box-sizing: border-box;
}
.r_box::before {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  top: -10rpx;
  right: 80rpx;
  border-right: solid 100rpx transparent;
  border-left: solid 100rpx transparent;
  border-bottom: solid 100rpx rgb(0 188 212 / 0.8);
  border-right-width: 12rpx;
  border-right-style: solid;
  border-right-color: transparent;
  border-left-width: 12rpx;
  border-left-style: solid;
  border-left-color: transparent;
  border-bottom-width: 12rpx;
  border-bottom-style: solid;
  border-bottom-color: rgb(0 188 212 / 0.8);
}

/* 标题栏 */
.center-title-box{
  color: #ffffff;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  width: 95%;
}
.center-title-left-box{
  display: flex;
  flex-flow: column;
  margin: 20rpx 10rpx;
}
.center-title-item-name{
  font-size: 38rpx;
  font-weight: bold;
  margin: 10rpx 0rpx;
}
.center-title-item-remake{
  font-size: 24rpx;
  color: #606266
}
.center-title-right-box{
  padding: 10rpx 40rpx;
  background: rgb(47 43 43 / 70%);
  border-radius: 35rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
  font-size: 24rpx;
}

/* 横轴滑动 */
.center-box{
  margin-top: 50rpx;
  width: 95%;
  display: flex;
  flex-flow: column;
}
.scroll-box {
  /* display: flex; */
  white-space: nowrap;
  /* overflow-x: scroll; */
}
.scroll-item {
  display: inline-block;
  width: 225rpx;
  height: 450rpx;
  text-align: center;
  margin-right: 20rpx;
}
.image-container{
  position: relative;
  width: 100%;
  height: 100%;
}
.scroll-item-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid #3e3b3b;
}
.scroll-item-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333;
}

/* 轮播图 */
.swiper-box {
  width: 100%;
  height: 400rpx;
}
.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-image {
  width: 100%;
  height: 95%;
  border-radius: 20rpx;
  transition: transform 0.5s ease, box-shadow 0.5s ease;
  transform: scale(0.85);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid #3e3b3b;
}
.swiper-image.active {
  transform: scale(1); /* 当前图片放大 */
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.7); /* 当前图片的阴影效果 */
}

/* 图片分页 */
.waterfall-lazy {
  height: 100%;
  width: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}
.waterfall-image-box{
  position: relative;
  display: inline-block;
  border-radius: 20rpx;
  overflow: hidden;
}
.image-wrapper {
  position: relative;
  height: auto; /* 确保高度随图片的高度变化 */
  overflow: hidden; /* 防止溢出 */
  border: 1rpx solid #3e3b3b;
  border-radius: 20rpx;
}
.waterfall-image {
  width: 100%;
  max-height: 650rpx;
  display: block;
  border-radius: 20rpx; /* 圆角 */
}
.waterfall-image-bottom-box{
  position: absolute;
  z-index: 100;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx;
}
.waterfall-bottom-content {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50rpx;
}
.waterfall-image-bottom-item-box{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.waterfall-image-bottom-item-img{
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
/* 浏览量图标 */
.preview-num-box{
  position: absolute;
  display: flex;
  left: 15rpx;
  bottom: 10rpx;
  color: #FFFFFF;
  font-size: 18rpx;
}

/* 底部标签栏 */
.waterfall-tags-box {
  line-height: 40rpx;
  margin: 10rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.waterfall-tags{
  word-wrap: break-word;
  white-space: normal;
}